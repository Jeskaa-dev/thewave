<%= simple_form_for @portfolio, url: update_step_portfolio_path(step: step), method: :patch, html: { data: { turbo_frame: "step-#{step}" } } do |f| %>
  <div class="flex flex-col gap-4 bg-gray-50 p-4 rounded-md ">

    <div class="flex justify-center items-center my-3" style="width:100%;">
      <%= f.input "step_#{step}_github_url".to_sym,
                  label: "Lien GitHub",
                  input_html: { class: "placeholder-input focus:outline-none focus:ring-2 border-input focus:ring-primary-green border-gray-200 ml-3", placeholder: "insert ton lien ici" } %>
    </div>
    <div class="flex justify-center items-center my-3" style="width:100%;">
      <%= f.input "step_#{step}_site_url".to_sym,
                  label: "Lien Site",
                  input_html: { class: "placeholder-input focus:outline-none focus:ring-2 border-input focus:ring-primary-green border-gray-200 ml-3", placeholder: "insert ton lien ici" } %>
    </div>
    <div>
      <%= f.button :submit, "Sauvegarder", class: "text-white bg-primary-green my-5 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center cursor-pointer" %>
    </div>
  </div>
<% end %>
