<div class="flex flex-col gap-5 justify-center grow bg-var-white rounded-lg shadow p-5 my-10 mr-10 ml-10">

  <h1 class="text-2xl font-bold mb-5"><strong>Mon parcours de formation</strong></h1>
    <h2 class="bg-gray-200 rounded px-2 py-1 text-xl font-bold mb-4">Comp√©tences</h2>
  <div id="user-skills" class="flex flex-wrap mb-10" style="width: 100%;">
  <%# <div class="flex flex-col mb-10"> %>

    <% @skills.each do |skill| %>
      <div class="skill-item" style="--rating: <%=  current_user.proficiency_in(skill) %>; background-image: url(<%= skill.image_url %>);"">
        <%= skill.name %>
      </div>
    <% end %>
    <div class="skill-item">
      +
    </div>
  </div>

 <h2 class="bg-gray-200 rounded px-2 py-1 text-xl font-bold mb-4">Formations</h2>
 <div class="flex h-screen" data-controller="resource">
  <div id="menu-ressources"
       class="w-1/4 min-w-[200px] max-w-[250px] p-4 border-r
              overflow-y-scroll max-h-[calc(100vh-200px)] min-h-[400px]
              scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-gray-100">
        <% @resources.each do |resource| %>
      <div class="resource-item flex justify-between items-center p-2 border-b cursor-pointer hover:bg-gray-50"
           data-resource-id="<%= resource.id %>"
           data-action="click->resource#show">
        <div class="overflow-hidden">
          <p class="truncate"><%= resource.name %></p>
          <p class="text-sm"><%= resource.difficulty %> | <%= resource.skill.name %> | <%= resource.format %></p>
        </div>
        <div class="ml-2 flex-shrink-0">
          <input type="checkbox" <%= resource.completions.first&.done ? 'checked' : '' %> disabled>
        </div>
      </div>
    <% end %>
  </div>

  <div id="resource-details" class="flex-1 p-4" data-resource-target="details">
    <!-- Resource details will be loaded here -->
  </div>
</div>
