<%= simple_form_for [@user, @question],
  url: user_questions_path(current_user),
  html: {
    data: {
      controller: "reset-form",
      action: "turbo:submit-end->reset-form#reset"
    }
  } do |f|
%>
  <div class="input-group mb-3 w-100">
    <div class="form-floating">
      <%= f.input :user_question, label: false, wrapper: false %>
    </div>
    <%= f.submit "Envoyer", id: "new-question-button", class: "bg-[#233038] hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
